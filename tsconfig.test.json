{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@ignite/shared": ["packages/shared/src/index.ts"],
      "@ignite/core": ["packages/core/src/index.ts"],
      "@ignite/http": ["packages/http/src/index.ts"]
    }
  },
  "include": [
    "packages/*/src/**/*.ts",
    "jest.setup.ts"
  ]
}
